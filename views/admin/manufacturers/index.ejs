<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Fabricantes
        <small>Listado de todos los fabricantes</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <a href="/admin"> Dashboard</a>
        </li>
        <li class="active">
            <i class="fa fa-list"></i> Fabricantes
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div id="alert_container" class="col-xs-12 col-lg-12 col-md-12 col-sm-12">
            <p class="hidden alert alert-success">Fabricante guardado exitosamente</p>
            <p class="hidden alert alert-danger">Error:</p>
            <p class="hidden alert alert-info">Algo</p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Lista</h3>
                    <div class="box-tools">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <div class="margin">
                        <div class="input-group pull-left" style="width: 150px;">
                            <input id="model_table_search" type="text" name="table_search" class="form-control input-sm" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                        <div class="pull-right">
                            <select name="tablePageSize" id="tablePageSize" class="form-control" onchange="pageableCollection.setPageSize(Number(this.value))">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="25">50</option>
                                <option value="25">100</option>
                            </select>
                        </div>
                    </div>
                    <div id="grid"></div>
                </div>
                <!-- /.box-body -->
                <div id="paginator" class="box-footer">
                    <div class="pull-left">
                        <button class="btn btn-danger" onclick="grid.deleteModels()"><i class="fa fa-trash"></i> Eliminar</button>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="box box-success collapsed-box">
                <div class="box-header with-border">
                    
                    <h3 class="box-title">Nuevo Fabricante</h3>
                    
                    <div class="box-tools">
                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                    </div>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">
                    <form id="create_form" class="form-horizontal create-form">
                    </form>
                </div>
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->
<% block.scripts = "<script src='/js/admin/pages/manufacturers.js'></script>" %>