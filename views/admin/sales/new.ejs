<h2>Nueva oferta</h2>
<%if (error) { %>
    <h3>Hubo un Error</h3>
    <% } else { %>
        <form action "/sale" method="POST">
            <div class="form-group">
                <label for="username">Nombre</label>
                <input class="form-control" type="text" id="username" name="username" placeholder=".." required />
            </div>
            <div class="form-group">
                <label for="username">Descuento</label>
                <select id="discount_type" class="form-control" name="discount_type" required>
                    <% for (var i=0; i<discounts.length; i++) { %>
                        <option value="<%= discounts[i].id %>">
                            <%= discounts[i].name + discounts[i].amount %>
                        </option>
                        <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="username">Valor</label>
                <input class="form-control" type="number" id="value" name="value" required />
            </div>
            <div class="form-group">
                <label for="username">Valor Final</label>
                <input class="form-control" type="number" id="value_final" name="value_final" required />
            </div>
            <div class="form-group">
                <label for="username">Categoria</label>
                <input class="form-control" type="text" id="category" name="category" required />
            </div>
            <div class="form-group">
                <label for="username">Marca</label>
                <input class="form-control" type="text" id="brand" name="brand" required />
            </div>
            <input type="submit" value="Crear" class="btn btn-default" />
        </form>
        <% } %>
