<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Ofertas
            <small>Listado de todas las ofertas</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> Ofertas
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descuento</th>
                    <th>Valor</th>
                    <th>Valor Total</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Cadena</th>
                    <th>Fabricante</th>
                    <th>Desde</th>
                    <th>Hasta</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i < sales.length; i++) { %>
                <% var sale = sales[i] %>
                <tr>
                    <td>
                        <%= sale.title %>
                    </td>
                    <td>
                        <%= sale.discount_type.name %> (<%= sale.discount_type.amount %>)
                    </td>
                    <td>
                        <%= sale.value %>
                    </td>
                    <td>
                        <%= sale.value_final %>
                    </td>
                    <td>
                        <%= sale.category.name %>
                    </td>
                    <td>
                        <%= sale.brand.name %>
                    </td>
                    <td>
                        <%= sale.chain.name %>
                    </td>
                    <td>
                        <%= sale.manufacturer.name %>
                    </td>
                    <td>
                        <%= sale.date_from.toLocaleDateString("AR", {month: 'short', day: 'numeric', year: 'numeric'}) %>
                    </td>
                    <td>
                        <%= sale.date_to.toLocaleDateString("AR", {month: 'short', day: 'numeric', year: 'numeric'}) %>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
<!-- /.row -->
