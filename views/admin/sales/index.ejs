
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Ofertas
        <small>Listado de todas las ofertas</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <i class="fa fa-dashboard"></i> <a href="/admin"> Dashboard</a>
        </li>
        <li class="active">
            <i class="fa fa-tags"></i> Ofertas
        </li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Your Page Content Here -->
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <button type="button" class="btn btn-primary"><i class="fa fa-plus"></i> Nuevo</button>
            <small> Crear nueva oferta</small>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Responsive Hover Table</h3>
                    <div class="box-tools">
                        <div class="input-group" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Descuento</th>
                                <th>Valor</th>
                                <th>Valor Total</th>
                                <th>Categoria</th>
                                <th>Marca</th>
                                <th>Cadena</th>
                                <th>Fabricante</th>
                                <th>Desde</th>
                                <th>Hasta</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i=0; i < sales.length; i++) { %>
                            <% var sale = sales[i] %>
                            <tr>
                                <td><%= sale.title %></td>
                                <td><%= sale.discount_type.name %> (<%= sale.discount_type.amount %>)</td>
                                <td><%= sale.value %></td>
                                <td><%= sale.value_final %></td>
                                <td><%= sale.category.name %></td>
                                <td><%= sale.brand.name %></td>
                                <td><%= sale.chain.name %></td>
                                <td><%= sale.manufacturer.name %></td>
                                <td><%= sale.date_from.toLocaleDateString("AR", {month: 'short', day: 'numeric', year: 'numeric'}) %></td>
                                <td><%= sale.date_to.toLocaleDateString("AR", {month: 'short', day: 'numeric', year: 'numeric'}) %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->