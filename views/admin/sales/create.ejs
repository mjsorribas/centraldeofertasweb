<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Nueva oferta
            <small>crear nueva oferta</small>
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
            </li>
            <li>
                <i class="fa fa-file"></i> <a href="/admin/sales/"> Ofertas </a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> Nueva
            </li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <%if (error) { %>
        <h3>Hubo un Error</h3>
        <% } else { %>
        <form action="/sale" method="POST">
            <div class="form-group">
                <label for="title">Nombre</label>
                <input class="form-control" type="text" id="title" name="title" placeholder=".." required />
            </div>
            <div class="form-group">
                <label for="discount_type">Descuento</label>
                <select id="discount_type" class="form-control" name="discount_type" required>
                    <% for (var i=0; i < attrs.discounts.length; i++) { %>
                    <option value=" <%= attrs.discounts[i].id %> ">
                        <%= attrs.discounts[i].name %> (<%= attrs.discounts[i].amount %>)
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="value">Valor</label>
                <input class="form-control" type="number" id="value" name="value" step="any" required />
            </div>
            <div class="form-group">
                <label for="value_final">Valor Final</label>
                <input class="form-control" type="number" id="value_final" name="value_final" step="any" required />
            </div>
            <div class="form-group">
                <label for="category">Categoria</label>
                <select id="category" class="form-control" name="category" required>
                    <% for (var i=0; i < attrs.categories.length; i++) { %>
                    <option value=" <%= attrs.categories[i].id %> ">
                        <%= attrs.categories[i].name %>
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="brand">Marca</label>
                <select id="brand" class="form-control" name="brand" required>
                    <% for (var i=0; i < attrs.brands.length; i++) { %>
                    <option value=" <%= attrs.brands[i].id %> ">
                        <%= attrs.brands[i].name %>
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="chain">Cadena</label>
                <select id="chain" class="form-control" name="chain" required>
                    <% for (var i=0; i < attrs.chains.length; i++) { %>
                    <option value=" <%= attrs.chains[i].id %> ">
                        <%= attrs.chains[i].name %>
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="manufacturer">Fabricantes</label>
                <select id="manufacturer" class="form-control" name="manufacturer" required>
                    <% for (var i=0; i < attrs.manufacturers.length; i++) { %>
                    <option value=" <%= attrs.manufacturers[i].id %> ">
                        <%= attrs.manufacturers[i].name %>
                    </option>
                    <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="date_from">Desde</label>
                <input id="date_from" type="date" class="form-control" name="date_from" />
            </div>
            <div class="form-group">
                <label for="date_to">Hasta</label>
                <input id="date_to" type="date" class="form-control" name="date_to" />
            </div>
            <input type="submit" value="Crear" class="btn btn-default" />
        </form>
        <% } %>
    </div>
</div>
